{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@/*": [
        "*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/navigation/*": [
        "navigation/*"
      ],
      "@/screens/*": [
        "screens/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/utils/*": [
        "utils/*"
      ]
    },
    "module": "commonjs", // or "esnext" if you're using ES modules
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
